<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cursos.Views.Register">
    <StackLayout Padding="30">
        <Label Text="Registro" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="NameEntry" Placeholder="Name" />
        <Entry x:Name="EmailEntry" Placeholder="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <Button Text="Register" Clicked="OnRegisterClicked" />
        <Label x:Name="ResultLabel" TextColor="Red" />
    </StackLayout>
</ContentPage>
