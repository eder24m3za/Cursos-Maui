<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cursos.Views.RegisterCliente"
             Title="Registrar Cliente">
    <StackLayout Padding="30">
        <!-- Título -->
        <Label Text="Registrar Cliente" FontSize="24" HorizontalOptions="Center" />

        <!-- Entrada para Nombre -->
        <Entry x:Name="NameEntry" Placeholder="Nombre del Cliente" />

        <!-- Entrada para Teléfono -->
        <Entry x:Name="PhoneEntry" Placeholder="Teléfono" Keyboard="Telephone" />

        <!-- Entrada para Correo -->
        <Entry x:Name="EmailEntry" Placeholder="Correo Electrónico" Keyboard="Email" />

        <!-- Selector de Curso -->
        <Picker x:Name="CursosPicker"
                Title="Seleccione un Curso"
                ItemsSource="{Binding Cursos}" 
                ItemDisplayBinding="{Binding nombre}" />

        <!-- Botón para registrar cliente -->
        <Button x:Name="registerButton" Text="Registrar" Clicked="OnRegisterClienteClicked" />

        <!-- Etiqueta para mostrar mensajes de resultado -->
        <Label x:Name="ResultLabel" TextColor="Red" />
    </StackLayout>
</ContentPage>
