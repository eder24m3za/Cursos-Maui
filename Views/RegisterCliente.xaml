<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cursos.Views.RegisterCliente"
             Title="RegisterCliente">
    <StackLayout Padding="30">
        <Label Text="Registrar Cliente" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="NameEntry" Placeholder="Nombre" />
        <Entry x:Name="PhoneEntry" Placeholder="Telefono" />
        <Entry x:Name="EmailEntry" Placeholder="Correo" />
        <Picker x:Name="CursosPicker"
                Title="Seleccione un curso"
                ItemsSource="{Binding Cursos}" 
                ItemDisplayBinding="{Binding nombre}" />
        <Button x:Name="registerButton" Text="Registrar" Clicked="OnRegisterClienteClicked" />
        <Label x:Name="ResultLabel" TextColor="Red" />
    </StackLayout>
</ContentPage>